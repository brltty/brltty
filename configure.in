in
   *)
      brltty_cv_prog_mkobj="\$(LD) -r -o"
      ;;
esac])
MKOBJ="${brltty_cv_prog_mkobj}"
AC_SUBST([MKOBJ])

AC_CACHE_CHECK([for linkage editor shared object flags], [brltty_cv_prog_mklib], [dnl
case "${host_os}"
in
   linux*|openbsd*|freebsd*|netbsd*|*qnx*)
      brltty_ld_flag_shared="-shared"
      brltty_ld_flag_soname="-soname"
      ;;
   solaris*)
      brltty_ld_flag_shared="-G"
      brltty_ld_flag_soname="-h"
      ;;
   hpux*)
      brltty_ld_flag_shared="-b"
      brltty_ld_flag_soname="+h"
      ;;
   osf*)
      brltty_ld_flag_shared="-shared"
      brltty_ld_flag_soname="-expect_unresolved '*' -soname"
      ;;
   *)
      AC_MSG_ERROR([linkage editor shared object flags not configured for ${host_os}])
      ;;
esac
if test "${GCC}" = "yes"
then
   brltty_cv_prog_mklib="\$(CC) -shared BRLTTY_OPTIONS_LD2CC([${brltty_ld_flag_soname} <soname>]) -o"
else
   brltty_cv_prog_mklib="\$(LD) ${brltty_ld_flag_shared} ${brltty_ld_flag_soname} <soname> -o"
fi])
AC_SUBST([MKLIB], ["${brltty_cv_prog_mklib}"])

AC_CACHE_CHECK([for configure shared object directory command], [brltty_cv_prog_conflibdir], [dnl
case "${host_os}"
in
   linux*)
      brltty_cv_prog_conflibdir="/sbin/ldconfig -n"
      ;;
   *)
      brltty_cv_prog_conflibdir=":"
      ;;
esac])
AC_SUBST([CONFLIBDIR], ["${brltty_cv_prog_conflibdir}"])

AC_PATH_XTRA
AC_SEARCH_LIBS([socket], [socket])

AC_CHECK_HEADERS([alloca.h getopt.h iconv.h sys/select.h syslog.h])
AC_CHECK_HEADERS([sys/io.h sys/modem.h machine/speaker.h linux/vt.h linux/input.h])
