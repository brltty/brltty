AC_CACHE_CHECK([for default braille device], [brltty_cv_device_serial_first], [dnl
case "${host_os}"
in
   linux*)
      for brltty_device in "/dev/ttyS0" "/dev/tts/0"
      do
         test -c "${brltty_device}" && {
            brltty_cv_device_serial_first="${brltty_device}"
            break
         }
      done
      ;;
   solaris*)
      brltty_cv_device_serial_first="/dev/ttya"
      ;;
   hpux*)
      brltty_cv_device_serial_first="/dev/tty0p0"
      ;;
   openbsd*)
      brltty_cv_device_serial_first="/dev/cua00"
      ;;
   freebsd*)
      brltty_cv_device_serial_first="/dev/cuaa0"
      ;;
   netbsd*)
      brltty_cv_device_serial_first="/dev/dty00"
      ;;
   osf*)
      brltty_cv_device_serial_first="/dev/tty00"
      ;;
   *qnx*)
      brltty_cv_device_serial_first="/dev/ser1"
      ;;
   *)
      brltty_cv_device_serial_first=""
      AC_MSG_WARN([no default braille device])
      ;;
esac])
AC_SUBST([first_serial_device], [${brltty_cv_device_serial_first}])

