SRC_DIR='@srcdir@'
SRC_TOP='@top_srcdir@/'
BLD_DIR='@builddir@'
BLD_TOP='@top_builddir@'

mkhlpfile()
{
   fno=$1
   cols=$2
   cells=$3
   cells_m_1=`expr $cells - 1`

   gcc -DHAVE_CONFIG_H -DGENHLP -I${BLD_DIR} -I${SRC_DIR} -I${BLD_TOP}/Programs -I${SRC_TOP}/Programs -I${BLD_TOP} -I${SRC_TOP} -E ${SRC_DIR}/braille.c |
      ${SRC_DIR}/trhlp |
      cat "${SRC_DIR}/help.src" - |
      sort -t: -s -k 1,1 |
      cut -d: -f 2- |
      sed \
         -e "s/<COLS>/${cols}/g" \
         -e "s/<CELLS-1>/${cells_m_1}/g" \
         -e "s/<CELLS>/${cells}/g" \
         >$cells.hlp
}

mkhlpfile 0 40 44
mkhlpfile 1 66 70
