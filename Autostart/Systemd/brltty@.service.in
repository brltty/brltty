[Unit]

Description=Braille Device: %I
Documentation=man:brltty(1)
Documentation=@PACKAGE_URL@

DefaultDependencies=no
StopWhenUnneeded=true

RequiresMountsFor=@UPDATABLE_DIRECTORY@


[Service]

Type=forking
PIDFile=%t/brltty-%i.pid
Environment=BRLTTY_PID_FILE=%t/brltty-%i.pid
ExecStart=/bin/brltty -d "%I" -E

#Type=notify
#ExecStart=/bin/brltty -d "%I" -E -n

TimeoutStartSec=5
TimeoutStopSec=10

Restart=always
RestartSec=30

Nice=-10
OOMScoreAdjust=-900

ProtectHome=read-only
ProtectSystem=full


